@using DBProject.Models;
@using System.Globalization;
@model List<CustomerOrder>

<div class="text-center">
    <h2 class="display-4">Current Customers and Orders</h2>
    <div class="card align-items-center">
        @foreach (var c in Model)
        {
            <div class="card col-lg-6 m-1">
                <div class="card border-dark bg-white h4 align-items-center">
                    @c.LastName, @c.FirstName<br />
                    Order Amount: @c.TotalAmount?.ToString("C")<br />
                    Order Date: @c.OrderDate<br />
                </div>
            </div>
        }
    </div>
</div>